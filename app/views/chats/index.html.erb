<div class="container d-flex align-items-center justify-content-center h-100">
  <div class="col-md-8 my-4">
    <div class="d-flex justify-content-between border p-3 my-3">
      <h2 class="text-center mb-3">Chats History</h2>
      <div class="mb-4">
        <%= simple_form_for @chat do |f| %>
          <%= f.submit "New chat with AI Assitant", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>

    <% if @chats.empty? %>
      <div class="text-center text-muted mt-5">
        <p>You have no chats with our AI Assitant. ¡Start a new one now!</p>
      </div>
    <% end %>
        <% @chats.each do |chat| %>
          <!-- Para que el preview funcione, he dejado una card de ejemplo. En tu app, esta card estaría dentro del bucle. -->
          <div class="card bg-white mb-3 rounded-4 shadow-sm">
                  <!-- Se agregaron clases de flexbox para alinear el título y la fecha, y se redujo el padding (py-2) -->
                <%= link_to chat_path(chat), class: "card-link-wrapper" do %>
                  <div class="card-body d-flex justify-content-between align-items-center py-2 px-3">
                      <!-- Reemplaza 'chat.title' con el atributo correcto de tu modelo -->
                      <h5 class="card-title mb-0"><%= chat.title %></h5>

                      <!-- 'time_ago_in_words' es un helper de Rails muy útil para esto -->
                      <p class="card-text text-muted small mb-0">
                        Started <%= time_ago_in_words(chat.created_at) %> ago
                      </p>
                  </div>
                <% end %>
              </div>
        <% end %>

  </div>

</div>            <%# Si no hay chats, puedes mostrar un mensaje alternativo %>


