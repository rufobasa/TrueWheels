<div class="container bg-whats mt-5 p-3 shadow overflow-hidden mx-auto rounded-4 shadow p-3 w-75">
  <% @chat.messages.each do |message| %>
      <% if message.role == "user" %>
        <div class="d-flex justify-content-end">
          <div class="bg-chat border px-3 pt-2 m-2 rounded-pill">
            <p><%= message.content %></p>
          </div>
      </div>
  
      <% elsif message.role == "assistant" %>
        <div class="d-flex justify-content-start"> 
          <div class="bg-white border px-3 pt-2 m-2 rounded-5">
            <p><%= message.content %></p>
          </div>
        </div>
      <% end %>  
  <% end %>
</div>

  <div class="container sticky-bottom bg-white p-3 shadow overflow-hidden mx-auto my-4 shadow p-3 w-75 rounded-4">
    <%= simple_form_for [@chat, @message], html: { class:"sticky-bottom" } do |f| %>
      <div class="d-flex">
        <%= f.input :content, label:"Ask a question", placeholder: "Type a question..." %>
        <%= f.submit "", class: "button-arrow" %>
      </div>
    <% end %>
  </div>
